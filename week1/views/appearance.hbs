<div class="appearance" data-id="{{ item.id }}">


    <section class="image__section">
        <figure>
            <img src="{{ item.image.url }}">
        </figure>
        {{#each item.product_occurrences}}
            <div class="product-indicator" style="top: {{position.y}}%;   /*deze is shit*/left: {{position.x}}%;" data-uuid="{{product.id}}"></div>
        {{/each}}
    </section>


    <section class="product__section">
        <h2><img class="avatar" src="{{ item.subject.avatar.url }}"> {{ item.subject.name }}</h2>
        <h1>{{ item.title }}</h1>

        <section class="appearance__products">
            <h1>Products</h1>
            <div class="appearance__products--inner">
                {{#each products}}
                    <div class="product" data-uuid="{{id}}">
                        <div class="actual">
                            <div class="image">
                                <h1>Actual</h1>
                                <img src="{{image.url}}">
                            </div>
                            <div class="info">
                                <h1>{{ name }}</h1>
                                <h2>{{ brand.name }}</h2>
                            </div>
                        </div>
                        {{#each similars}}
                            <div class="similar">
                                <div class="image">
                                    <h1>{{ similar_type }}</h1>
                                    <img src="{{image.url}}">
                                </div>
                                <div class="info">
                                    <h1>{{ name }}</h1>
                                    <h2>{{ brand.name }}</h2>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{/each}}
            </div>
        </section>
    </section>
</div>
